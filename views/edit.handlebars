<div class="container mt-5">
  <h4 class="mb-2">Update restaurant information</h4>
  <div class="row">
    <form action="/restaurants/{{{restaurant._id}}}?_method=PUT" method="POST">
      <div class="form-group">
        <label for="exampleFormControlInput1">Name</label>
        <input type="text" name="name" class="form-control" id="exampleFormControlInput1" value="{{{restaurant.name}}}"
          required>
      </div>
      <div class="form-group">
        <label for="exampleFormControlInput1">English Name</label>
        <input type="text" name="name_en" class="form-control" id="exampleFormControlInput1"
          value="{{{restaurant.name_en}}}" required>
      </div>
      <div class="form-group">
        <label for="exampleFormControlInput1">Category</label>
        <input type="text" name="category" class="form-control" id="exampleFormControlInput1"
          value="{{{restaurant.category}}}" required>
      </div>
      <div class="form-group">
        <label for="exampleFormControlInput1">Image</label>
        <input type="text" name="image" class="form-control" id="exampleFormControlInput1"
          value="{{{restaurant.image}}}" required>
      </div>
      <div class="form-group">
        <label for="exampleFormControlInput1">Location</label>
        <input type="text" name="location" class="form-control" id="exampleFormControlInput1"
          value="{{{restaurant.location}}}" required>
      </div>
      <div class="form-group">
        <label for="exampleFormControlInput1">Google Map</label>
        <input type="text" name="google_map" class="form-control" id="exampleFormControlInput1"
          value="{{{restaurant.google_map}}}" required>
      </div>
      <div class="form-group">
        <label for="exampleFormControlInput1">Rating</label>
        <input type="number" name="rating" class="form-control" id="exampleFormControlInput1" min="1" max="5"
          value="{{{restaurant.rating}}}" required>
      </div>

      <div class="form-group">
        <label for="exampleFormControlTextarea1">Description</label>
        <textarea name="description" class="form-control" id="exampleFormControlTextarea1" rows="3"
          required>{{{restaurant.description}}}</textarea>
      </div>
      <button type="submit" class="btn btn-outline-success">Update</button>
    </form>
  </div>
</div>